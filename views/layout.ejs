<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=0.8, maximum-scale=1">
	<title>Recipe App</title>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
</head>

<body>
	<div id="nav">
		<div class="col-sm nav-align">
			<h1 id="title">Recipe App Aaro</h1>
		</div>
		<div class="col-sm nav-align">
			<a href="/">
				<span class="button">Home</span>
			</a>
			
			<a href="/contact">
				<span class="button">Contact</span>
			</a>
		</div>
		<div class="login-status">
			<% if (loggedIn) { %>
			<div class="bubble logged-in">
				Logged in as <a href="<%=`/users/${currentUser._id}`%>">
					<%= currentUser.fullName %></a>
			</div>
			<div class="log-out">
				<a href="/users/logout">Log out</a>
			</div>
			<%} else {%>
			<div class="bubble log-in">
				<a href="/users/login">Log In</a>
			</div>
			<% } %>
		</div>
	</div>

    <div class="flashes">
      <% if (flashMessages) { %>
        <% if (flashMessages.success) { %>
            <div class="alert alert-success" role="alert">
              <%= flashMessages.success %>
          </div>          
        <% } else if (flashMessages.error) { %>
          <div class="alert alert-danger" role="alert">
              <%= flashMessages.error %>
            </div>
        <% } %>
      <% } %>
    </div>

    <div class="mt-4 p-5 bg-light text-black rounded">
      <%- body %>
    </div>
    <div id="footer">
      <footer>
        <%- include('partials/footer'); %>
      </footer>
    </div>

  </body>
</html>